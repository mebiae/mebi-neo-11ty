<style>
    section > a > article {
        border: 2px solid var(--box-border);
        background-color: var(--box-back);
    }

    section > a,
    section > a:visited,
    section > a:hover,
    section > a:active {
        color: var(--text);
    }

    section > a > article:hover,
    section > a > article:active {
        box-shadow: 0 0 15px var(--a-hover);
    }

    section > a:hover {
        position: relative;
        top: -3px;
    }

    section > a:last-child article {
        margin-bottom: 0;
    }
</style>

<main>
    <article>
        <h1>Blogs</h1>
        <p>Here is the place where I just talk about stuff. From my life, to stuff, to whatever.</p>
    </article>
    <section>
        {% if collections.blogs %}
            {% for post in collections.blogs | reverse %}
                <a href="{{ post.filePathStem }}">
                    <article>
                        <h2>{{ post.data.sub }}</h2>
                        <p>{{ post.data.blogdesc }}</p>
                    <small>Posted on {{ post.date | UTCA }}</small>
                    </article>
                </a>
            {% endfor %}
        {% else %}
            <h3>Hm, no blog posts, for now.</h3>
        {% endif %}
    </section>
</main>

<aside>
    {% include "./_includes/partials/sidenav.njk" %}
    <article>
        {% include "./_includes/partials/styleswitcher.njk" %}
    </article>
</aside>