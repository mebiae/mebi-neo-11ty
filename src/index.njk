    <section>
        <h1>Recent Blogs</h1>
        {% if collections.blogs %}
            {% for post in collections.blogs | reverse | limit(3) %}
                <a href="{{ post.filePathStem }}">
                    <article>
                        <h2>{{ post.data.sub }}</h2>
                        <p>{{ post.data.blogdesc }}</p>
                    <small>Posted on {{ post.date | UTCA }}</small>
                    </article>
                </a>
            {% endfor %}
        {% else %}
            <h3>Hm, no blog posts, for now.</h3>
        {% endif %}

        <h3><a href="/blog">See more --&gt;</a></h3>
        <small><a href="/blog_feed.xml">Blog RSS</a></small>
    </section>
